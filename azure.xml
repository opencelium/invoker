                            <field name="etag" type="string"/>
                            <field name="properties" type="object">
                                <field name="provisioningState" type="string"/>
                                <field name="addressPrefix" type="string"/>
                                <field name="ipConfigurations" type="array">
                                    <field name="id" type="string"/>
