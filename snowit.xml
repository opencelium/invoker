                                        <field name="VolumeName" type="string"/>
                                        <field name="SizeMb" type="string"/>
                                        <field name="$type" type="string"/>
                                        <field name="Name" type="string"/>
                                        <field name="VolumeName" type="string"/>
                                        <field name="SizeMb" type="string"/>
